<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
	  <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
	  <%= render 'shared/stats' %>
	</section>
    <section class="micropost_form">
      <%= render 'shared/post_form' %>
    </section>
  </aside>
   <div class="col-md-8">
		<% if current_user.posts.any? %>
			<h3>Microposts (<%= current_user.posts.count %>)</h3>
			<ol class="microposts">
				<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>
</div>