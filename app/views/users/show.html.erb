<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
	  <h1>
	    <%= gravatar_for @user %>
	    <%= @user.name %>
	    <span><%= pluralize(current_user.posts.count, "post") %></span>
	  </h1>
    </section>
    <section class="stats">
	  	<%= render 'shared/stats' %>
		</section>
  </aside>
  <div class="col-md-8">
  	<%= render 'follow_form' if user_signed_in? %>
		<% if @user.posts.any? %>
			<h3>Microposts (<%= @user.posts.count %>)</h3>
			<ol class="microposts">
				<%= render @posts %>
			</ol>
			<%= will_paginate @posts %>
		<% end %>
	</div>
</div>
</div>
