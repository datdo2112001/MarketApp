<li id="post-<%= post.id %>">
  <%= link_to gravatar_for(post.user, size: 50), post.user %>
  <span class="user"><%= link_to post.user.name, post.user %></span><br>
  <span><b><%= post.title %></b></span><br>
  <span><b>Price: <%= post.price %></b></span><br>
  <span class="content">
    <%= post.content %>
    <%= image_tag post.image if post.image.attached? %>
  </span>
  <b> Likes:<%= post.likes.count %> Comments:<%= post.comments.count %> </b>
  <span class="timestamp">
   Posted <%= time_ago_in_words(post.created_at) %> ago.
   <% if current_user == post.user || (current_user.has_role? :admin) %>
    <%= link_to "delete", post, method: :delete,
                   data: { confirm: "You sure?" } %>
  <% end %>
  </span>
  <span><%= link_to "More detail", post %></span>
</li>