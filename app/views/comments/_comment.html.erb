<% if comment.user != nil %> 
  <li>
    <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
    <span class="user"><%= link_to comment.user.name, comment.user %></span>
    <span class="content">
	  <%= comment.content %>
    </span>
    <span class="timestamp">
      Posted <%= comment.created_at %> 
      <% if current_user == comment.user || (current_user.has_role? :admin) %>
	    <%= link_to "delete", post_comment_path(comment.post, comment), method: :delete, 
	                          data: { confirm: "You sure?" }, remote: :true, class: "destroy-comment" %>
	  <% end %>
    </span>
  </li>
<% end %>
